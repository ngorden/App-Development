@model IEnumerable<ApplicationDevelopment.Models.Product>
@{
    ViewBag.Title = "Browse Products";
}

<h2>Browse Products</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <td>Name</td>
            <td>Description</td>
            <td></td>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@Html.ActionLink("Order Product", "Order", new { id = item.Id })</td>
        </tr>
    }
</table>
